<div class="user-card">
  <div class="avatar-wrapper">
    <%= avatar_for user, size: 50 %>
  </div>
  <div class="uc-metadata">
    <h4><%= link_to react_component('UserNameWithStatus',  { user: {username: user.username, value: user.verified_member?}}), user %></h4>
    <p><%= user.description %></p>
    <%= follow_button_for(user) %>
  </div>
</div>
